{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env"],

  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "VERCEL_URL",
        "PORT",
        "NODE_ENV",
        "SKIP_ENV_VALIDATION",
        "NEXT_PUBLIC_SHOW_NEW_URL"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "start": {},
    "test": {}
  }
}
